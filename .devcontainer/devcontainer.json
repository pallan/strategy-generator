// For format details, see https://aka.ms/devcontainer.json.
{
  "name": "Strategy Generator",
  "build": {
    "context": "..",
    "dockerfile": "Dockerfile"
  },
  "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",
  "features": {
    "ghcr.io/devcontainers/features/github-cli:1": {},
    "ghcr.io/anthropics/devcontainer-features/claude-code:1": {}
  },
  "remoteEnv": {
    "CLAUDE_CONFIG_DIR": "/home/node/.claude"
  },
  "mounts": [
    "source=/Users/pallan/.claude,target=/home/node/.claude,type=bind,consistency=cached",
    "source=claude-code-history,target=/commandhistory,type=volume"
  ],
  "customizations": {
    "vscode": {
      "extensions": [
        "ritwickdey.LiveServer",
        "GitHub.copilot",
        "streetsidesoftware.code-spell-checker"
      ]
    }
  },
  "forwardPorts": [5500],
  "postCreateCommand": "bash .devcontainer/fix-claude-paths.sh && echo 'Open index.html with Live Server to start'"
}
